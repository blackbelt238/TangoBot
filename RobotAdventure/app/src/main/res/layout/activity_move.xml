<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.csci451.group8.robotadventure.MoveActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/northButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="North" />

        <Button
            android:id="@+id/eastbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/northButton"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="53dp"
            android:layout_toEndOf="@+id/northButton"
            android:layout_toRightOf="@+id/northButton"
            android:text="East" />

        <Button
            android:id="@+id/westButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/eastbutton"
            android:layout_alignBottom="@+id/eastbutton"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/northButton"
            android:layout_toStartOf="@+id/northButton"
            android:text="West" />

        <Button
            android:id="@+id/southButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eastbutton"
            android:layout_marginTop="44dp"
            android:layout_toLeftOf="@+id/eastbutton"
            android:layout_toStartOf="@+id/eastbutton"
            android:text="South" />

        <Button
            android:id="@+id/chestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/westButton"
            android:layout_alignStart="@+id/westButton"
            android:layout_below="@+id/southButton"
            android:layout_marginTop="55dp"
            android:text="Chest" />

        <Button
            android:id="@+id/chargeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chestButton"
            android:layout_alignBottom="@+id/chestButton"
            android:layout_alignLeft="@+id/eastbutton"
            android:layout_alignStart="@+id/eastbutton"
            android:text="Charge" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
